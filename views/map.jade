extends layout

block content
  .container
    h1.main-header= title

    .canvas
      #planet-info
      canvas#cartograph(resize="true")
      ul#map-toolbar
        li View Page
        li Follow

      script(type="text/javascript")
        var source = $("#planet-info-template").html();
        planetInfoTemplate = Handlebars.compile(source);
        $("#planet-info").hide();

        function stopMusic(){
          $("audio").each(function(){
            this.pause();
          });
        }

